@model List<ServiceLayer.DTOs.IncomeExpenseListViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Category</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Amount</td>
                <td>@item.Date.ToString("dd-MM-yyyy")</td>
                <td>@item.Type</td>
                <td>
                    <a asp-action="DeleteDataInList" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="" asp-route-id="@item.Id" class="btn btn-danger">Edit</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a asp-action="GetSummary" asp-controller="Report" class="btn btn-success btn-lg">Report</a>
</div>
