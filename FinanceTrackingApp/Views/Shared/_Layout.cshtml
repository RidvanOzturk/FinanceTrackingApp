<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finance Tracking App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Tüm sayfa yüksekliği için */
            background-color: #f8f9fa; /* Sayfanın arka plan rengi */
        }
        footer {
            background-color: #343a40; /* Koyu gri footer rengi */
            color: white; /* Footer yazı rengi */
            text-align: center; /* Footer yazısını ortala */
            padding: 10px 0; /* Footer içi boşluk */
            margin-top: auto; /* Footer'ı en alta it */
        }
        header {
            background-color: #a0a0a0; /* Hafif koyu header rengi */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light ">
            <div class="container">
                <a class="navbar-brand" href="/Transactions/dashboard">Finance Tracking App</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item d-flex">
                                <a class="nav-link" href="@Url.Action("Register", "Auth")">SignUp</a>
                                <a class="nav-link" href="@Url.Action("Login", "Auth")">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <!-- Flex-grow sınıfı ile içerik alanını büyüt -->
        @RenderBody()
    </div>
    <footer>
        <p>&copy; 2024 - Finance Tracking App - FBR</p>
    </footer>
</body>
</html>
